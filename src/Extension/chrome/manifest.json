{
  "manifest_version": 2,
  "minimum_chrome_version": "18.0",
  "name": "Max Download Manager",
  "description": "MDM is a download manager",
  "version": "1.0",
  "icons": {
    "48": "app.png",
    "128": "app-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "app.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "nativeMessaging"
  ],
  "commands": {
    "toggle-monitoring": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle monitoring"
    }
  }
}